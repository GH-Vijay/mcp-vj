{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch (McpCalculatorServer)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/McpCalculatorServer/bin/Debug/net9.0/McpCalculatorServer.dll",
      "args": [],
      "cwd": "${workspaceFolder}/McpCalculatorServer",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
    ,
    {
      "name": ".NET Launch (McpClientConsole)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/McpClientConsole/bin/Debug/net9.0/McpClientConsole.dll",
      "args": [],
      "cwd": "${workspaceFolder}/McpClientConsole",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
    ,
    {
      "name": ".NET Launch (McpClientLlm)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build McpClientLlm",
      "program": "${workspaceFolder}/McpClientLlm/bin/Debug/net9.0/McpClientLlm.dll",
      "cwd": "${workspaceFolder}/McpClientLlm",
      "envFile": "${workspaceFolder}/McpClientLlm/.env",
      "console": "integratedTerminal"
    }
  ]
}
